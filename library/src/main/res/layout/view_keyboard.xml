<?xml version="1.0" encoding="utf-8"?><!--键盘主体布局 包括title和键盘区container-->
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cll_keyboard_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bdbdbd"
    app:alignmentMode="alignMargins"
    android:padding="0.2dp">

    <TextView
        android:id="@+id/delete"
        style="@style/keyboard_TextView"
        android:text="delete"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/btn1"
        style="@style/keyboard_TextView"
        android:text="1"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/btn4"
        style="@style/keyboard_TextView"
        android:text="4"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/btn7"
        style="@style/keyboard_TextView"
        android:text="7"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/decimal"
        style="@style/keyboard_TextView"
        android:text="."
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="1" />


    <TextView
        android:id="@+id/divide"
        style="@style/keyboard_TextView"
        android:text="/"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/btn2"
        style="@style/keyboard_TextView"
        android:text="2"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/btn5"
        style="@style/keyboard_TextView"
        android:text="5"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/btn8"
        style="@style/keyboard_TextView"
        android:text="8"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/btn0"
        style="@style/keyboard_TextView"
        android:text="0"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/multiply"
        style="@style/keyboard_TextView"
        android:text="*"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/btn3"
        style="@style/keyboard_TextView"
        android:text="3"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/btn6"
        style="@style/keyboard_TextView"
        android:text="6"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/btn9"
        style="@style/keyboard_TextView"
        android:text="9"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/opposite"
        style="@style/keyboard_TextView"
        android:text="+/-"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/subtract"
        style="@style/keyboard_TextView"
        android:text="-"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/add"
        style="@style/keyboard_TextView"
        android:text="+"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowSpan="2"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/done"
        style="@style/keyboard_TextView"
        android:text="done"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowSpan="2"
        app:layout_rowWeight="1" />


</android.support.v7.widget.GridLayout>